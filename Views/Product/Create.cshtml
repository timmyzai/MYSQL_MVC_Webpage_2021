@model MVC_Project2021.ViewModels.ProductCreateViewModel

<form enctype="multipart/form-data" method="post">
    <div class="border p-3 col-md-12">
        <h2 class="pl-3">Add Product</h2>
        <br />
        <div class="row">
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductName" class="form-control" placeholder="Please enter a product name">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductCode"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductCode" class="form-control" placeholder="Please enter a product code" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductPrice"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductPrice" class="form-control" placeholder="Please enter a product price" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductImage"></label>
                    </div>
                    <div class="col-md-8">
                        <input type="file" asp-for="ProductImage" class="form-control"  data-val="true" data-val-required="Image is required"/>
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <span class="col-xs-offset-5">
                        <input class="btn btn-info" type="submit" value="Create" asp-action="Create" />
                        <a class="btn btn-success" asp-action="index">Back</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />

    }
}