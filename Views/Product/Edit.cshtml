@model MVC_Project2021.ViewModels.ProductEditViewModel

<form enctype="multipart/form-data" method="post">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingImagePath" />
    <div class="border p-3 col-md-12">
        <h2 class="pl-3">Edit Product</h2>
        <br />
        <div class="row">
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductCode"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductCode" class="form-control" placeholder="Please enter a product code" />
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductName" class="form-control" placeholder="Please enter a product name">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ProductPrice"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductPrice" class="form-control" placeholder="Please enter a product price" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group text-center">
                        <img class="img-thumbnail" src="~/lib/img/@Model.ExistingImagePath" alt="No Image" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="ProductImage"></label>
                    </div>
                    <div class="col-md-8">
                        <input type="file" asp-for="ProductImage" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <span class="col-xs-offset-5">
                        <input class="btn btn-info w-100" type="submit" value="Update" asp-action="EditPost" />
                        <a class="btn btn-success" asp-action="index">Back</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}